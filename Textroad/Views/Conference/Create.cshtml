@model Textroad.Models.ConferenceCreateBindModel
@using Classes.Helper;

@{
    ViewBag.Title = Resources.Administration.CreateConference;
    Layout = "~/Views/Shared/_Popup.cshtml";
}

<link rel="stylesheet" href="~/Content/css/1.custom-style/AngularDDL.css" />
<link href="~/Content/css/bootstrap-datetimepicker.min.css" rel="stylesheet" media="screen">
<style>
    .input-group-addon {
        width: 12%;
    }
</style>
<div class="modal-header">
    <div class="widget-buttons pull-right">
        <a href="javascript:void(0);" onclick="popupExpand(this)" data-toggle="maximize">
            <i class="fa fa-expand"></i>
        </a>
        <a href="javascript:void(0);" ng-click="cancel()" data-toggle="dispose">
            <i class="fa fa-times"></i>
        </a>
    </div>
    <h2 class="modal-title">@Resources.Administration.NewConference</h2>
</div>

@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "form", ng_submit = "formSubmit($event)", enctype = "multipart/form-data" }))
{
    <div class="modal-body">
        @Html.AntiForgeryToken()
        <div >
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="row">
                <div class="col-xs-6 form-group">
                    @Html.LabelFor(model => model.SubjectID, Resources.Administration.Subject, htmlAttributes: new { @class = "text-info" })
                    @Html.CustomDropdownListFor(model => model.SubjectID, (IEnumerable<CustomSelectListItem>)ViewBag.SubjectID, null, Resources.Resource.SelectItem, htmlAttributes: new { @class = "form-control", @required = "required" })
                    @Html.ValidationMessageFor(model => model.SubjectID, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="row">
                <div class="col-xs-6 form-group">
                    @Html.LabelFor(model => model.ConferenceName, Resources.Administration.ConferenceName, htmlAttributes: new { @class = "text-info" })
                    @Html.EditorFor(model => model.ConferenceName, new { htmlAttributes = new { @class = "form-control", @required="required" } })
                    @Html.ValidationMessageFor(model => model.ConferenceName, "", new { @class = "text-danger" })
                </div>
                <div class="col-xs-6 form-group">
                    @Html.LabelFor(model => model.ConferenceDetails, Resources.Administration.ConferenceDetails, htmlAttributes: new { @class = "text-info" })
                    @Html.TextAreaFor(model => model.ConferenceDetails, htmlAttributes : new { @class = "form-control"  })
                    @Html.ValidationMessageFor(model => model.ConferenceDetails, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="row">
                <div class="col-xs-6 form-group">
                    @Html.LabelFor(model => model.StartDate, Resources.Administration.StartDate, htmlAttributes: new { @class = "text-info" })
                    <div class="input-group date form_datetime" data-date-format="dd/mm/yyyy" data-link-field="StartDate">
                        <input class="form-control" size="16" type="text" value="" readonly>
                        <span class="input-group-addon"><span class="glyphicon glyphicon-remove"></span></span>
                        <span class="input-group-addon"><span class="glyphicon glyphicon-th" ng-click="showDatePicker()"></span></span>
                    </div>
                    <input type="hidden" name="StartDate" id="StartDate" value="" />
                    @Html.ValidationMessageFor(model => model.StartDate, "", new { @class = "text-danger", @id = "StartDateValidation" })
                </div>
                <div class="col-xs-6 form-group">
                    @Html.LabelFor(model => model.Duration, Resources.Administration.Duration, htmlAttributes: new { @class = "text-info" })
                    @Html.EditorFor(model => model.Duration, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Duration, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="row">
                <div class="col-xs-6 form-group">
                    @Html.LabelFor(model => model.Country, Resources.Administration.Country, htmlAttributes: new { @class = "text-info" })
                    @Html.EditorFor(model => model.Country, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Country, "", new { @class = "text-danger" })
                </div>
                <div class="col-xs-6 form-group">
                    @Html.LabelFor(model => model.City, Resources.Administration.City, htmlAttributes: new { @class = "text-info" })
                    @Html.EditorFor(model => model.City, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.City, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="row">
                <div class="col-xs-6 form-group">
                    @Html.LabelFor(model => model.Address, Resources.Administration.Address, htmlAttributes: new { @class = "text-info" })
                    @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
                </div>
                <div class="col-xs-6 form-group">
                    @Html.LabelFor(model => model.ImageName, Resources.Administration.Image, htmlAttributes: new { @class = "text-info" })
                    <input type="file" id="file" class="upload" name="file" accept="image/x-png,image/gif,image/jpeg">
                    @Html.ValidationMessageFor(model => model.ImageName, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="row">
                <div class="col-xs-6 form-group">
                    @Html.LabelFor(model => model.Url, Resources.Administration.URL, htmlAttributes: new { @class = "text-info" })
                    @Html.EditorFor(model => model.Url, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Url, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <input type="submit" value="@Resources.Resource.ButtonSave" class="btn btn-success" />
        <button class="btn btn-default" type="button" ng-click="cancel()" >@Resources.Resource.ButtonCancel</button>
    </div>

}

@section scripts {
    <script type="text/javascript" src="~/Content/js/datetime/bootstrap-datetimepicker.min.js" charset="UTF-8"></script>
}